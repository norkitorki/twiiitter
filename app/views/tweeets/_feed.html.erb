<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>

    <div class="media-content">
      <%= render 'form', tweeet: @tweeet %>
    </div>
  </article>


  <% tweeets.each do |tweeet| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>

        <div class="media-content">
          <div class="content">
            <strong>John Doe</strong><br>
            <p><%= tweeet.tweeet %>
          </div>

          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to 'Visit', tweeet, class: 'level-item' %>
              <%= link_to 'Edit', edit_tweeet_path(tweeet), class: 'level-item' %>
              <%= link_to 'Delete', tweeet, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this tweeet?' }, class: 'level-item' %>
            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>
